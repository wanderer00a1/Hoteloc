<% layout('./layouts/styles')%>
<div class="row">
    <h1 class="text-center">New Hotel</h1>
    <div class="col-12 col-md-6 offset-md-3">
    <form action="/hotels" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="hotel[title]" required>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="hotel[location]" required>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        
        
        <div class="input-group mb-3">
            <input type="file" class="form-control" id="image" name="image" multiple>
            <label class="input-group-text" for="photos">Upload</label>
        </div>

        <!-- <div class="mb-3">
            <label class="form-label" for="image">Image URL</label>
            <input class="form-control" type="url" id="image" name="hotel[image]" required>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div> -->

        <div class="input-group mb-3">
            <label class="form-label" for="price">Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price">$</span>
                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" name="hotel[price]" aria-describedby="price-label" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
          </div>


        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="hotel[description]" required></textarea>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        
        <button class="btn btn-success mb-3">Add Hotel</button>
    </form>
    <footer>
        <button class="btn btn-danger mb-3"><a href="/hotels">Back</a></button>
    </footer>
</div>
</div>
    

