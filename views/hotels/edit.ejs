<% layout('./layouts/styles')%>
    <div class="row">
        <h1 class="text-center">New Hotel</h1>
        <div class="col-12 col-md-6 offset-md-3">
            <form action="/hotels/<%=hotel._id %>?_method=put" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="hotel[title]" value="<%= hotel.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="hotel[location]" value="<%=hotel.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input type="file" name="image" id="image" multiple>
            </div>

            <div class="input-group mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" name="hotel[price]" aria-describedby="price-label" value="<%=hotel.price %>" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
              </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="hotel[description]" required><%=hotel.description %> </textarea>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <% hotel.images.forEach(function(img,i){ %>
                    <img crossorigin="anonymous" src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox"  id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%= i %>">Delete</label>
                <% }) %>
                
            </div>
            
            <div class="mb-3">
            <button class="btn btn-info mb-3">Update Hotel</button>
        </div>
        </form>
        <button class="btn btn-danger mb-3"><a href="/hotels">All Hotels</a></button>
